
<div class="page-show user" id='profile-container'>

    <div class="profile-picture">
      <% if current_user.photo.attached? %>
              <%= cl_image_tag @user.photo.key, crop: :fit, class: "card-img-top" %>
            <% else %>
              <%= image_tag "https://res.cloudinary.com/dvbejvnhk/image/upload/v1582693057/koala-ava_k6pdbq.png", class: "card-img-top" %>
            <% end %>
    </div>

    <div class="card user" id='user-info'>
      <div class="card-body">
        <h2 class="card-title"><%= @user.fullname %></h2>
        <h5 class="card-title"><%= @user.email %></h5>
        <h7 class="card-text"><%= @user.bio %></h7>

      </div>

      <div class="btn-container" id='profile-btn-container'>
        <%= link_to 'Home', root_path, class: 'btn btn-dark profile-home-btn' %>
        <%= link_to 'Edit this user', edit_user_path(@user),
            method: :get,
            class: 'btn btn-dark'  %>

      </div>

    </div>
</div>
